rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Generic user access
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // MAO Admin: Full Access
    match /registrations/{docId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "mao";
    }

    match /licenses/{docId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "mao";
    }

    // MTO: Payments access only
    match /payments/{docId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "mto"
                       || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "mao";
    }

    // Optional: Only MAO can manage gears, vessels, etc.
    match /vessels/{docId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "mao";
    }

    match /gears/{docId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "mao";
    }
  }
}